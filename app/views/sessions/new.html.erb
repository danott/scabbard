<h1>Sign in</h1>

<p><%= link_to "Sign up", new_person_path %></p>

<% flash.each do |key, value| %>
  <%= content_tag :div, value, class: "flash #{key}" %>
<% end %>

<%= form_tag session_path do %>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email, '' %>
  </div>
  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, '' %>
  </div>
  <div>
    <%= submit_tag 'Sign in'  %>
  </div>
<% end %>
